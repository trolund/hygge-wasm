let n: int = 16; // declare n as an integer and assign it the value 16
// define a recursive function to calculate the nth term of the Fibonacci sequence
fun fibRec(n: int): int = { 
    if (n <= 1) then {
        n
    } 
    else {
        fibRec(n - 1) + fibRec(n - 2)
    }
};
// print the result
println("The 16th term of the Fibonacci sequence is:");
println(fibRec(n))