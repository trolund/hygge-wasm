    let mutable x: int = 22;
    fun () ->
        22 // x <- x + 1 // x is captured from the surrounding scope
};

// This is interpreted and compiled incorrectly!
let c1: () -> int = makeCounter();
let c2: () -> int = makeCounter();
assert(c1() = 22);
assert(c1() = 22);
