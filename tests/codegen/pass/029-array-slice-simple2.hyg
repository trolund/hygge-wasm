// create the two arrays
let arr: array {int} = array(12, 0);
let sliced: array {int} = arraySlice(arr, 4, 8);

// fill the first array with numbers
let mutable i: int = 0;
while (i < arrayLength(arr)) do {
    arrayElem(arr, i) <- i;
    i <- i + 1
};

// assert that the second array contains the correct numbers
assert(arrayElem(sliced, 0) = 4);
assert(arrayElem(sliced, 1) = 5);
assert(arrayElem(sliced, 2) = 6);
assert(arrayElem(sliced, 3) = 7)


