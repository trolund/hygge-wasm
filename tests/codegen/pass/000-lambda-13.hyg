// subtyping
type fType = () -> int;
type MakeCType = (int) -> fType;

let z: int = 2;

let makeCounter: MakeCType = fun(k: int) -> {
    let y: int = k;
    let mutable x: int = 2;

    let f: () -> int = fun() -> {

        let f: () -> int = fun() -> {
            x <- x * y * z 
        };

       f();
       x
    };

    f
};

let c1: fType = makeCounter(2);
let c2: fType = makeCounter(4);
let c3: fType = makeCounter(8);

assert(c1() = 8);
assert(c2() = 16);
assert(c3() = 32)

